<% @page_title = "ユーザ登録情報" %>

<div class="well" style="width: 400px; margin-right: auto; margin-left: auto;">

    <% if flash.notice %>
    <div class="alert alert-success" align="center">
        <%= flash.notice %>
    </div>
    <% end %>

    <div class="row">

        <table class="table table-bordered" style="background-color: white">
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @user.address %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @user.mail %></td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td><%= @user.pass %></td>
        </tr>
    </table>



</div>


</div>