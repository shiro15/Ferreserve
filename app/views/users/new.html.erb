<% @page_title = "新規会員登録" %>

<div class="well" style="width: 400px; margin-right: auto; margin-left: auto;">

<% if flash.alert %>
    <div class="alert alert-danger" align="center">
      <%= flash.alert %>
    </div>
<% end %>

<%= form_for @user do |f| %>

<div class="row">
        <div class="col-xs-10 col-xs-offset-1">

            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :address %>
            <%= f.text_field :address, class: "form-control" %>

            <%= f.label :mail %>
            <%= f.text_field :mail, class: "form-control" %>

            <%= f.label :pass %>
            <%= f.password_field :pass, class: "form-control"%>

        </div>

        <div class="col-xs-1 col-xs-offset-1" style="margin-top: 15px;">
            <%= f.submit "登録", class: "btn btn-default" %>
        </div>
 </div>

<% end %>



</div>